@using Bookish.Models.View;
@model BooksViewModel;

@{
    ViewData["Title"] = "Update Books";
}

<div class="text-center">
    <h1 class="display-4">Here are our lovely books:</h1>
     <table> 
        <thead>
             <tr>
                <th scope="col">BookId</th>
                <th scope="col">BookTitle</th>
                <th scope="col">BookAuthor</th>
                <th scope="col"></th>
            <tr>
        </thead>
<tbody>
        @{
            foreach (var book in Model.Books)
            {

                     @* <a asp-area="" asp-controller="Books" asp-action="ViewIndividual" asp-route-id="@book.Id">
                        @book.Title <small>by @book.Author</small>
                    </a> *@
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        @* <td><button type = "submit"  class="btn btn-outline-primary">Update</button> *@
                        <td><a asp-area="" asp-controller="Books" asp-action="UpdateInduvidual" asp-route-id="@book.Id">
                        <input type="button" class="btn btn-outline-primary" value="Update" /></a>
                        </td>
                        <td><a asp-area="" asp-controller="Books" asp-action="AddCopy" asp-route-id="@book.Id">
                        <input type="button" class="btn btn-outline-primary" value="Add a Copy" />
                        </a>
                        </td>
                    </tr>

            }
        }
</tbody>
    <table>
</div>
